local Players = game:GetService("Players")
local player = Players.LocalPlayer
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local Text = Instance.new("TextLabel")

-- Parent the ScreenGui to PlayerGui
ScreenGui.Parent = player:FindFirstChildOfClass("PlayerGui")

-- Frame Properties
Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Frame.Size = UDim2.new(0, 250, 0, 60)
Frame.Position = UDim2.new(0.5, -125, 0.1, 0)
Frame.BorderSizePixel = 0
Frame.BackgroundTransparency = 0.2

-- Title Properties
Title.Parent = Frame
Title.Text = "[NovaAPI]"
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 18
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundTransparency = 1
Title.Size = UDim2.new(1, 0, 0.5, 0)

-- Text Properties
Text.Parent = Frame
Text.Text = "NovaAPI Injected"
Text.Font = Enum.Font.SourceSans
Text.TextSize = 14
Text.TextColor3 = Color3.fromRGB(200, 200, 200)
Text.BackgroundTransparency = 1
Text.Size = UDim2.new(1, 0, 0.5, 0)
Text.Position = UDim2.new(0, 0, 0.5, 0)

-- Fade Out & Destroy
task.spawn(function()
    wait(3) -- Time before fade-out
    for i = 1, 10 do
        Frame.BackgroundTransparency = Frame.BackgroundTransparency + 0.1
        Title.TextTransparency = Title.TextTransparency + 0.1
        Text.TextTransparency = Text.TextTransparency + 0.1
        wait(0.1)
    end
    ScreenGui:Destroy()
end)
